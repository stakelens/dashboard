---
import Layout from '../layouts/Layout.astro';
import { ConstructionIcon } from 'lucide-react';
---

<Layout>
  <header class="bg-white shadow">
    <nav class="container mx-auto px-6 py-3">
      <div class="flex justify-between items-center">
        <div class="text-xl font-semibold text-gray-800">Vista Dashboard</div>
        <div class="flex space-x-4">
          <a href="#" class="text-black hover:text-blue-600">Home</a>
          <a href="#" class="text-black hover:text-blue-600">About</a>
          <a href="#" class="text-black hover:text-blue-600">Contact</a>
        </div>
      </div>
    </nav>
  </header>

  <main class="flex-grow container mx-auto mt-10 p-6 bg-white rounded-lg shadow-lg flex flex-col items-center justify-center">
    <div class="flex flex-col items-center space-y-4">
      <ConstructionIcon size={48} className="text-black" />
      <h1 class="text-4xl font-bold text-gray-800">Under Construction</h1>
      <p class="text-xl text-gray-600">We're working on something awesome. Stay tuned!</p>
    </div>
  </main>

  <footer class="bg-white shadow mt-10">
    <div class="container mx-auto px-6 py-4">
      <div class="flex justify-between items-center">
        <div class="text-gray-600">&copy; 2024 Vista Staking. All rights reserved.</div>
        <div class="flex space-x-4">
          <a href="#" class="text-gray-600 hover:text-blue-600">Privacy Policy</a>
          <a href="#" class="text-gray-600 hover:text-blue-600">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>