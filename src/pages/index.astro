---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <header class="bg-gray-800 rounded-lg shadow">
    <nav class="container mx-auto px-6 py-3">
      <div class="flex justify-between items-center">
        <div class="text-2xl font-semibold text-white">Vista</div>
        <div class="flex space-x-4">
          <a href="#" class="text-gray-300 hover:text-white">Github</a>
          <a href="#" class="text-gray-300 hover:text-white">Twitter</a>
        </div>
      </div>
    </nav>
  </header>

  <main class="flex-grow container mx-auto mt-10 px-4 sm:px-6 lg:px-8">
    <section class="text-center mb-8">
      <h2 class="text-4xl font-bold mb-2">Total Value Locked</h2>
      <p class="text-5xl font-bold text-white">$0</p>
      <p class="text-xl text-gray-400">2023 Apr 21 - 2024 Apr 19</p>
    </section>

    <section>
      <table class="w-full text-left table-collapse">
        <thead>
          <tr class="bg-gray-800">
            <th class="px-4 py-2">#</th>
            <th class="px-4 py-2">Name</th>
            <th class="px-4 py-2">Type</th>
            <th class="px-4 py-2">Accesibility</th>
            <th class="px-4 py-2">Total</th>
            <th class="px-4 py-2">Market Share</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-b border-gray-700">
            <td class="px-4 py-2">1</td>
            <td class="px-4 py-2">Rocketpool</td>
            <td class="px-4 py-2">Liquid Staking</td>
            <td class="px-4 py-2">Decentralized</td>
            <td class="px-4 py-2">$0</td>
            <td class="px-4 py-2">0%</td>
          </tr>
        </tbody>
      </table>
    </section>
  </main>
</Layout>